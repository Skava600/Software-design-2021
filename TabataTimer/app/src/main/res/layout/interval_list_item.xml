<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/interval_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/colorAccentBlue"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/time_decrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/intervalTime"
                android:layout_toRightOf="@id/repsButton"
                android:backgroundTint="@color/colorAccent"
                android:contentDescription="@string/decrement_time"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_minus_24" />

            <EditText
                android:id="@+id/intervalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intervalType"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"
                android:text="Sample Interval Name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/fontPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/intervalType"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOME TYPE"
                android:textAlignment="center"
                android:textColor="@color/fontPrimary"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/intervalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intervalName"
                android:layout_toStartOf="@id/time_increment"
                android:layout_toEndOf="@id/time_decrement"
                android:text="10:05"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/fontSecondary" />

            <ImageButton
                android:id="@+id/time_increment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/intervalTime"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="58dp"
                android:backgroundTint="@color/colorAccent"
                android:contentDescription="@string/increment_time"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_add_24" />

            <ToggleButton
                android:id="@+id/repsButton"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/intervalTime"
                android:background="@drawable/ic_stopwatch_24"
                android:backgroundTint="@color/colorAccent"
                android:textSize="0sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>